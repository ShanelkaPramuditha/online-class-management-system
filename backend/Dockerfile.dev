# Use a slim Node.js base image
FROM node:18-alpine AS builder

# Set working directory
WORKDIR /app

# Copy package.json and pnpm-lock.yaml for dependency installation
COPY package*.json ./

# Install pnpm globally (optional, adjust based on your setup)
RUN npm install -g pnpm

# Install dependencies using pnpm
RUN pnpm install --frozen-lockfile

# Switch to a smaller runtime image for the final container
FROM node:18-alpine

# Copy everything from the builder stage
COPY --from=builder /app .

# Expose port for your backend application (adjust as needed)
EXPOSE 3000

# Start the application using pnpm (adjust command based on your entry point)
CMD [ "pnpm", "start" ]
